<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.0.1/dist/axentix.min.css">
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>


<div id="<%= dom_id comment %>">
  <% unless comment.parent_id || !comment.persisted? %>

    <div class="post">
      <div class="post_avatar">
        <%= image_tag("profile.png", alt: "Example Image", class: "img") %>
      </div>

      <div class="post_body">
        <div class="post_header">
          <div class="post_header_text">
            <h3><%= User.find(Rweet.find(comment.rweet_id).user_id).username %>
              <span class="post_header_special">
              <span class="material-symbols-outlined post_badge"> verified </span>@michel  <%= time_ago_in_words(comment.created_at) %>
            </span>
            </h3>
          </div>
          <div class="post_header_description">
            <p><%= comment.body %></p>
          </div>
        </div>
      </div>
    </div>

  <% end %>


  <%#= link_to 'reply', new_rweet_comment_path(@rweet, parent_id: comment.id), remote: true, class: 'd-block' %>
  <%# if comment.replies.any? %>
    <%# comment.replies.each do |reply| %>
      <%#= render partial: 'comments/reply', locals: { reply: reply } %>
    <%# end %>
  <%# end %>
<!--  <div id="reply-form-<%#= comment.id %>"></div>-->

</div>
