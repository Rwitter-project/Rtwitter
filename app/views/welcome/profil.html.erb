<h1>Profile</h1>

<%= current_user.username %> |
<% if current_user.certified == nil %>
  <%= "Certified: No" %>
<% else %>
  <%= "Certified: " %><%= current_user.certified %>
<% end %><br>

<% if current_user.description == nil %>
   <%= "No description" %>
<% else %>
   <%= current_user.description %>
<% end %><br>

<% if current_user.localisation == nil %>
  <%= "No localisation" %>
<% else %>
  <%= current_user.localisation %>
<% end %>

<br><br><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %><br>
<%= link_to 'Back', root_path, :class => 'navbar-link' %>