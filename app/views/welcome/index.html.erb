<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.0.1/dist/axentix.min.css">

<body style="background-color: black; overflow: hidden">

<div class="display-flex">
  <% if user_signed_in? %>
    <h1>Hello, <%= current_user.username %> !</h1>
    <%= link_to 'Profile', url_for(root_url + current_user.username), :class => 'navbar-link' %> |
    <%= link_to "Log out", logout_path, method: :delete, :class => 'navbar-link' %>
  <% else %>
    <div class="image">
      <%= image_tag("acceuiltwitter.jpg", alt: "Example Image", class: "image") %>
    </div>
    <div class="title">
      <h1 class="text-end">Ça se passe maintenant</h1>
      <h3 class="text-endend">Rejoignez Rwitter dès aujourd'hui.</h3>
      <%= link_to "Sign up", new_user_registration_path, :class => 'btn rounded-1 blue btn-press' %>
      <%= link_to "Login", new_user_session_path, :class => 'btn rounded-1 blue btn-press' %>
    </div>
    <div class="twitter">
      <%= image_tag("rwitter-logo.png", alt: "Example Image", class: "twitter") %>
    </div>
    <div class="twitter2">
      <%= image_tag("twitter2.jpg", alt: "Example Image", class: "twitter2") %>
    </div>
    </div>
  <% end %>
  </body>

