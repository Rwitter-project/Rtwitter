<div>
  <% if @user.nil? %>
    No user found with this name.
  <% else %>
    <%= image_tag("/images/avatar_logo_#{@user.id}.png", size: "200x200", :border => 2) %><br><br>
    <%= @user.username %> |
    <% if @user.certified == nil %>
      <%= "Certified: No" %>
    <% else %>
      <%= "Certified: " %><%= @user.certified %>
    <% end %><br>
    @<%= @user.username.downcase %><br><br>

    <% if @user.description == nil %>
      <%= "No description" %>
    <% else %>
      <%= @user.description %>
    <% end %><br>

    <% if @user.location == nil %>
      <%= "No location" %>
    <% else %>
      City: <%= @user.location %>
    <% end %> |

    <% if @user.confirmed_at != nil %>
      Joined Twitter in <%= @user.confirmed_at.to_formatted_s(:month_and_year) %>
    <% end %><br><br>

    Rweet:<br><br>
    <% @user.rweets.each do |rweet| %>
      <%= link_to "See More", rweet_path(rweet.id), :method => :get %>
    <% end %>

    <% if @user.username == current_user.username %>
      <br><br><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
    <% end %>
    <br><%= link_to 'Back', root_path, :class => 'navbar-link' %>
  <% end %>
</div>