<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.0.1/dist/axentix.min.css">
<% if @user.nil? %>
  No user found with this name.
<% else %>
  <body style="background-color: #111;">
  <div class="split left">
    <div class="top">
      <h3 style="color: white"><%= link_to 'Home', root_path, :class => 'navbar-link' %></h3>
      <% if @user.username == current_user.username %>
        <h3 style="color: white;"><%= link_to 'Profile', url_for(root_url + current_user.username), :class => 'navbar-link' %></h3>
      <% end %>
    </div>
  </div>

  <div class="split right">
    <div>
      <div class="grix xs1" style="color: white">
        <div class="profile" style="border: 1px solid white;">
          <div> <%= image_tag("/images/banner.png", size: "948x200") %></div>
          <div class="grix xs2">
            <div class="logo"> <%= image_tag("/images/avatar_logo_#{@user.id}.png", size: "100x100", :style => "border-radius: 50%") %></div>
            <div class="logo-right"> <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link btn shadow-1 rounded-1 blue' %></div>
          </div>
          <div class="username">
            <%= @user.username %> |
            <% if @user.certified == nil %>
              <%= "Certified: No" %>
            <% else %>
              <%= "Certified: " %><%= @user.certified %>
            <% end %>
          </div>
          <div class="IdUsername">
            @<%= @user.username.downcase %>
          </div>
          <div class="description">
            <% if @user.description == nil %>
              <%= "No description" %>
            <% else %>
              <%= @user.description %>
            <% end %></div>
          <div class="other">
            <% if @user.location == nil %>
              <%= "No location" %>
            <% else %>
              City: <%= @user.location %>
            <% end %> |

            <% if @user.confirmed_at != nil %>
              Joined Twitter in <%= @user.confirmed_at.to_formatted_s(:month_and_year) %>
            <% end %>
          </div>
        </div>
        <div class="rweet">
          <% @user.rweets.each do |rweet| %>
            <div class="rweet-post"><%= User.find(rweet.user.id).username %><br>
              <%= rweet.body %><br><br>
              <%= rweet.likes.count %> <%= (rweet.likes.count) == 1 ? 'Like' : 'Likes' %><br>
              <%= link_to "See More", rweet_path(rweet.id), :method => :get, style: "text-decoration: underline;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  </body>
<% end %>
